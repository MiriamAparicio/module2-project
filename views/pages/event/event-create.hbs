<section>
  <div class="hero-body">
    <div class="container">
      <h3 class="title has-text-light">New event</h3>
      <form method="POST" action="/event">
        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label has-text-light">Name</label>
          </div>
          <div class="field-body">
            <div class="field">
              <p class="control is-expanded">
                <input class="input" type="text" placeholder="Name" name="name">
              </p>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label has-text-light">Date</label>
          </div>
          <div class="field-body">
            <div class="field is-expanded">
              <div class="field">
                <p class="control is-expanded">
                  <input class="input" type="date" placeholder="Date" name="date">
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label has-text-light">Description</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <textarea class="textarea" name = "description" placeholder="Litle description about the event"></textarea>
              </div>
            </div>
          </div>
        </div>
        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label has-text-light  ">Location</label>
          </div>
          <div class="field-body">
            <div class="field">
              <p class="control is-expanded">
                <input class="input" type="text" placeholder="Longitud" name="longitude">
              </p>
            </div>
            <div class="field">
              <p class="control is-expanded">
                <input class="input is-success" type="text" placeholder="Latitude" name="latitude">
              </p>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label">
            <!-- Left empty for spacing -->
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
              </div>
              {{#if errorMessage.length}}
                <p class="subtitle is-4 text-shadow help is-danger">{{ errorMessage }}</p>
              {{/if}}
              </div>
                <button type="submit" class="button is-block is-info">
                  Submit
                </button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>